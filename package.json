{
  "name": "grey-literature-search-and-tag",
  "version": "1.0.0",
  "description": "The *Grey Literature Search App* enables researchers to systematically search, screen, and extract insights from non-traditional sources (e.g., government reports, clinical guidelines, white papers) using structured strategies, automation, and transparency.",
  "author": "Barrie",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:visual": "start-server-and-test storybook http://localhost:6006 test:visual:run",
    "test:visual:run": "vitest src/test/visual-regression.test.ts",
    "test:visual:update": "vitest src/test/visual-regression.test.ts -u",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install"
  },
